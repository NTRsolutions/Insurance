<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout"
        android:id="@+id/tool_bar_in_update_profile_page"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_in_update_profile_page">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="1dp"
            android:id="@+id/cardView_layout_profile_image_layout"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            card_view:cardBackgroundColor="@color/gray"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_marginTop="3dp"
                    android:text="Profile Picture"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/big_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_picture_name_text"/>
                <TextView
                    android:layout_toLeftOf="@+id/ivSelectImg_profile"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/profile_picture_name_text"
                    android:id="@+id/edit_profile_image_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Upload Profile Picture"/>
                <TextView
                    android:layout_below="@+id/edit_profile_image_text"
                    android:layout_toLeftOf="@+id/ivSelectImg_profile"
                    android:id="@+id/edit_profile_image_text_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:hint="Instruction brief about profile picture"/>
                <com.pkmmte.circularimageview.CircularImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ivSelectImg_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile_img" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/cardView_layout_profile_image_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="1dp"
            android:id="@+id/cardView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/policy_term_layout"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <EditText
                            android:id="@+id/first_name"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />

                        <EditText
                            android:id="@+id/last_name"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />

                        <EditText
                            android:id="@+id/gender"
                            android:layout_height="wrap_content"
                            android:hint="Gender"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />
                        <EditText
                            android:id="@+id/date_of_birth"
                            android:layout_height="wrap_content"
                            android:hint="Date Of Birth"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />

                        <EditText
                            android:id="@+id/email_id"
                            android:layout_height="wrap_content"
                            android:hint="Email id "
                            android:textSize="18sp"
                            android:layout_width="match_parent" />
                        <EditText
                            android:id="@+id/phone_number"
                            android:layout_height="wrap_content"
                            android:hint="Phone Number"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />

                        <EditText
                            android:id="@+id/smoke_edittxv"
                            android:layout_height="wrap_content"
                            android:hint="Somker/ Non Somker"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />
                        <EditText
                            android:id="@+id/country_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Country"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_height="wrap_content"
                            android:hint="Address"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />

                        <EditText
                            android:id="@+id/occupation"
                            android:layout_height="wrap_content"
                            android:hint="Occupation"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />
                        <EditText
                            android:layout_height="wrap_content"
                            android:hint="Maritual Status"
                            android:textSize="18sp"
                            android:layout_width="match_parent" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/policy_term_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:text=" Personal Details"
                android:textColor="@color/big_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>