<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar_id_change_mobile_number_layout"/>
    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_below="@+id/toolbar_id_change_mobile_number_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/new_mobile_number"
            android:gravity="center"
            android:hint="New Mobile Number"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_below="@+id/new_mobile_number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/confirm_mobile_number"
            android:gravity="center"
            android:hint="CONFIRM MOBILE NUMBER"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
        android:layout_margin="50dp"
        android:id="@+id/send_mobile_number_button"
        android:layout_below="@+id/confirm_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="SEND"
        android:background="@color/big_text_color"/>
    </RelativeLayout>
</RelativeLayout>
