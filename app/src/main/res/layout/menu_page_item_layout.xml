<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="1dp"
    android:id="@+id/cardView_layout_profile"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    card_view:cardBackgroundColor="@color/gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/menu_relative_layout">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/menu_item_image"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/demo1"/>

        <TextView
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/menu_item_image"
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Buy A Policy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
