<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/policy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/big_text_color"
                    android:textSize="30sp"
                    android:typeface="sans"
                    tools:text="Delivery"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/policy_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    tools:src="@drawable/ic_delivery"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/policy_dsescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="20sp"
                    android:typeface="sans"
                    tools:text=" care is something like what we want to do.. it saves money as well as risk"/>


                    <Button
                        android:id="@+id/view_policy_button"
                        android:layout_marginTop="20dp"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rectangular_shape"
                        android:text="View Polices"/>
            </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>