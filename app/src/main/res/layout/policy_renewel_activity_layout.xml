<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout"
        android:id="@+id/policy_renewel_toolbar"/>
    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/policy_renewel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body_layout_renewel">
    <TextView
        android:id="@+id/policy_heading_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Enter Policy Details"
        android:textColor="@color/big_text_color"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>
        <EditText
            android:textStyle="bold"
            android:id="@+id/policy_number"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/policy_heading_text"
            android:textSize="18sp"
            android:hint="Enter Policy number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingRight="5dp"
            android:id="@+id/policy_date_of_birth"
            android:layout_below="@id/policy_number"
            android:layout_marginTop="20dp"
            android:hint="date of Birth"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/renewel_button"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/policy_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="Proceed"
            android:textStyle="bold"
            android:background="@color/big_text_color"/>
    </RelativeLayout>
</RelativeLayout>