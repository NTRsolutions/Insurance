<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="1dp"
    android:id="@+id/cardView"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@color/gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/all_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/list_one_layout_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <com.pkmmte.circularimageview.CircularImageView
                android:layout_centerVertical="true"
                android:id="@+id/item_image_policy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/app_logo"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_image_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/policy__title_name_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Car list 1 "
                    android:textSize="18sp"
                    android:textColor="@color/big_text_color"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_below="@+id/policy__title_name_item"
                    android:id="@+id/policy_description_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/easy_manage" />
            </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

</android.support.v7.widget.CardView>