<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="1dp"
    android:id="@+id/cardView"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@color/gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
           android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/faq_item_layout">
    <TextView
        android:textSize="18sp"
        android:text="faq item 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/faq_title_name_text"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/faq_title_name_text"
                android:textSize="14sp"
                android:text="1 hour ago"
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/faq_description_name_text"/>

</RelativeLayout>
    </android.support.v7.widget.CardView>

