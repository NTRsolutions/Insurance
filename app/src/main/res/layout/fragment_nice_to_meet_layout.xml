<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
       android:layout_marginTop="130dp"
        android:id="@+id/text_laout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/meet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nice_to_meet"
            android:textColor="@color/big_text_color"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/meet_details"
            android:layout_below="@+id/meet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/nice_to_meet_details"
            android:textSize="20sp" />

        <Button
            android:layout_below="@+id/meet_details"
            android:id="@+id/sure_button_nice_page"
            android:background="@drawable/rectangular_shape"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/sure"/>

    </RelativeLayout>
</RelativeLayout>