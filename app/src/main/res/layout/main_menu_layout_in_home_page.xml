<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/drop_down_layout"
    android:background="@color/gray">
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Menu"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <ImageView
        android:layout_marginRight="20dp"
        android:id="@+id/drop_down_menu_image"
        android:src="@android:drawable/arrow_down_float"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">
    <android.support.v7.widget.CardView

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="1dp"
        android:id="@+id/cardView_layout_profile"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        card_view:cardBackgroundColor="@color/gray"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="20dp">
        <TextView
            android:layout_marginTop="25dp"
            android:text="Bulbul Hasan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/faq_title_name_text"/>
        <Button
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/edit_profile_button_menu_page"
            android:background="@drawable/rectangular_shape"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:padding="2dp"
           android:layout_marginBottom="10dp"
            android:text="edit profile"/>
        <com.pkmmte.circularimageview.CircularImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/ivSelectImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/profile_img" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/cardView_layout_profile"
        android:id="@+id/recycler_view_menu_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:background="@color/gray"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:text="Change Password"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/change_password_in_menu"
        android:layout_below="@+id/recycler_view_menu_page"
        />
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/view"
                android:layout_below="@+id/change_password_in_menu"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/big_text_color"/>
    <TextView
        android:paddingLeft="20dp"
        android:background="@color/gray"
        android:layout_below="@+id/view"
        android:textSize="20sp"
        android:text="Change Mobile Number"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/change_mobile_number_in_menu"/>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/view1"
                android:layout_below="@+id/change_mobile_number_in_menu"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/big_text_color"/>
    <TextView
        android:paddingLeft="20dp"
        android:layout_below="@+id/view1"
        android:textSize="20sp"
        android:text="Notification Settings"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:id="@+id/notification_settings_in_menu"/>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/view2"
                android:layout_below="@+id/notification_settings_in_menu"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/big_text_color"/>
    <Button
        android:layout_marginTop="5dp"
        android:layout_below="@+id/notification_settings_in_menu"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/logout_button_in_menu_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="Logout"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rectangular_blue_shape"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
